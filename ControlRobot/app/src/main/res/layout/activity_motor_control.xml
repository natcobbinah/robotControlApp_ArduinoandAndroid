<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sthigwgfwb.controlrobot.SplashScreen"
    android:background="#1d4851">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Wheel Chair Control"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/Forward"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/forward"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:onClick="Forwarding"
            android:background="@null"
            android:src="@drawable/forward" />

        <ImageButton
            android:id="@+id/Reverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/discnt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:onClick="Reversing"
            android:background="@null"
            android:src="@drawable/reverse" />

        <ImageButton
            android:id="@+id/Left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/discnt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:onClick="Lefting"
            android:background="@null"
            android:src="@drawable/left" />

        <ImageButton
            android:id="@+id/Right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/discnt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:onClick="Righting"
            android:background="@null"
            android:src="@drawable/right" />

        <ImageButton
            android:id="@+id/Stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/discnt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:onClick="Stopping"
            android:background="@null"
            android:src="@drawable/stop" />

        <ImageButton
            android:id="@+id/discnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:onClick="Disconnecting"
            android:src="@drawable/disconnect" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/abt"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:onClick="about"
                android:src="@drawable/about" />

            <ImageButton
                android:id="@+id/ledon"
                android:layout_width="119dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:onClick="turnOn"
                android:src="@drawable/on" />

            <ImageButton
                android:id="@+id/ledoff"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:onClick="turnOff"
                android:src="@drawable/red" />
          <!--  <Button
                android:id="@+id/ledon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="turnOn"
                android:layout_weight="1"
                android:text="Led On" />

            <Button
                android:id="@+id/ledoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="turnOff"
                android:text="Led Off" />-->



        </LinearLayout>

    </LinearLayout>


</LinearLayout>
